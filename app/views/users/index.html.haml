.well
  %table.table.table-striped.pending-users
    %h3
      Pending Users
    %thead
      %tr
        %th
          Email
        %th
          Name
        %th
          Approved
        %th
          Actions
    %tbody
      - @pending_users.each do |user|
        %tr
          %td
            = user.email
          %td
            = user.full_name
          %td
            = user.approved
          %td
            = link_to "Approve", approve_user_path(user), class: 'btn btn-mini btn-primary'
            = link_to "Delete", user, confirm: "Are you sure you want to delete: #{user.email} ?", method: :delete, class: 'btn btn-mini btn-danger'

